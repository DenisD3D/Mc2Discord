{
    "schemaVersion": 1,
    "id": "${modId}",
    "version": "${modVersion}",
    "name": "${modName}",
    "description": "${modDescription}",
    "authors": [
        "${modAuthors}"
    ],
    "contact": {
        "homepage": "${modDisplayUrl}"
    },
    "license": "Apache 2.0",
    "environment": "*",
    "entrypoints": {
        "main": [
            "fr.denisd3d.mc2discord.fabric.Mc2DiscordFabric"
        ]
    },
    "mixins": [
        "mc2discord.mixins.json",
        "mc2discord.fabric.mixins.json"
    ],
    "accessWidener" : "${modId}.accesswidener",
    "depends": {
        "fabricloader": ">=${fabricLoaderVersion}",
        "minecraft": "${fabricMinecraftVersionRange}",
        "java": ">=${javaVersion}",
        "fabric-api": "*"
    }
}